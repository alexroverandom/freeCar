@model FreeCar.Web.Models.ViewModels.LayoutViewModel
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Free car</title>
	@Styles.Render("~/css")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<ul class="nav navbar-nav">
			<li><a href="/">Главная</a></li>
			<li><a href="/services/">Услуги</a></li>
			<li><a href="/quickorder/">Сделать заказ</a></li>
			<li><a href="/comein/">Принять участие</a></li>
			<li><a href="/drivers/">Водители</a></li>
			<li><a href="/cars/">Наши авто</a></li>
			<li><a href="/map/">Карта</a></li>
			<li><a href="/blog/">Блог</a></li>
		</ul>
		@Html.Partial("_LoginPartial")
	</div>
	<div class="container body-content">
		<div class="page_content jMainRegion">
			@RenderBody()
		</div>
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - free car for you 24/7</p>
		</footer>
	</div>

	<div class="jModalRegion"></div>

	<div class="jTemplates">
		@Html.Partial("Templates/Home/_home")
		@Html.Partial("Templates/Home/_cars")
	</div>

	<div class="jScripts">
		@Scripts.Render("~/bundles/libs")
		@*@Scripts.Render("~/bundles/bootstrap")*@
		@Scripts.Render("~/bundles/app")

		<script>
			App.Collections.cars.reset(@(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Cars))));
			App.Collections.carModels.reset(@(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.CarModels))));
			App.Collections.carBrands.reset(@(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.CarBrands))));
			@*App.Collections.cars.reset(@(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Cars))));
			App.Collections.cars.reset(@(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Cars))));
			App.Collections.cars.reset(@(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Cars))));
			App.Collections.cars.reset(@(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Cars))));*@

			App.start();
		</script>
		@RenderSection("scripts", required: false)
	</div>
</body>
</html>
